{
  "manifest_version": 3,
  "name": "FIU Degree Tracker",
  "version": "1.0",
  "description": "Track your FIU Computer Science degree progress and plan your academic journey",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "alarms",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://my.fiu.edu/*",
    "https://panthersoft.fiu.edu/*",
    "https://maps.googleapis.com/*",
    "http://127.0.0.1:8000/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "FIU Degree Tracker",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://my.fiu.edu/*",
        "https://panthersoft.fiu.edu/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}